{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
